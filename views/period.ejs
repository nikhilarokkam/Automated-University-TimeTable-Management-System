<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    
    <title>Period View</title>
   
  </head>
  <body>
  
    <%- include('partials/header.ejs') %>
    <div id="wrapper">

      <aside id="sidebar-wrapper">
        <div class="sidebar-brand">
          <h2>ADMIN PANEL</h2>
        </div>
        <nav class="main-nav" role="navigation">
        <ul class="sidebar-nav unstyled list-hover-slide">
          <li >
            <a  href="/facultyView"><i class="fa fa-home" ></i> <img src="/images/tIcon.png">&nbsp;&nbsp;&nbsp;FACULTY</a>
          </li>
          <li>
            <a href="/subjectadd"><i class="fa fa-plug"></i> <img src="/images/courseIc.png">&nbsp;&nbsp;&nbsp;COURSE</a>
          </li>
          <li>
            <a href="/Roomlist"><i class="fa fa-user"></i>  <img src="/images/ic_classroom.png">&nbsp;&nbsp;&nbsp;CLASS Room</a>
          </li>
         
          <li class="active">
            <a href="/period"><i class="fa fa-user"></i><img src="/images/ic_enforce.png">&nbsp;&nbsp;&nbsp;PERIOD list</a>
          </li>
            <li>
              <a href="/enfValue"><i class="fa fa-user"></i><img src="/images/ic_enforce.png">&nbsp;&nbsp;&nbsp;ASSIGN</a>
            </li>
            <li >
              <a href="/generateTable"><i class="fa fa-user"></i><img src="/images/ic_generate.png">&nbsp;&nbsp;&nbsp;Time Table</a>
            </li>
            
        </ul>
        </nav>
      </aside>
      
        <div id="navbar-wrapper">
          <nav class="navbar navbar-inverse">
            <div class="container-fluid">
              <div class="navbar-header">
                <h3 style="padding-right: 730px;color: black;">Period Lists</h3>
                
              </div>
            </div>
          </nav>
        </div>

        <div class="container" style="margin-top: 20px;">
          <br><br>
                <input class="form-control" style="width: 50%;" id="myInput" type="text" placeholder="Search..">
   
                <img  data-toggle="modal" data-target="#exampleModalCenter"  style="float: right;" src="/images/plus.png">
              
                <br>
                

        
                <table style="margin-top: 20px;" class="table table-striped table-class" id="main-table">
          
                  <thead>
            
                    <tr>
            
                      <th>Period Id </th>
             
                      <th>Start Time </th>
              
                      <th>End Time</th>

              
                      <th>Action</th>
           
                    </tr>
          
                  </thead>
         
                  <tbody id="myTable">

           
                    <% for(var i=0; i < json.length; i++) { %>
            
                      <tr>
            
                        <td><%= json[i].id %></td>
              
                        <td><%= json[i].startTime %></td>
              
                        <td><%= json[i].endTime %></td>
             
                        <td>  
              
                
                
                          <form method="GET" action="/delperiod/<%=json[i].id%>" style="float:right">
                 
                            <a href="editperiod/<%=json[i].id%>" class="btn btn-primary" -->EDIT</a>
                 
                            <input type="submit" class="btn btn-danger" name="delete" value='Delete' onClick="return confirm('Are you sure you want to delete?')" />
                 
                            <input type="hidden" name="_method" value="DELETE" />
              
                          </form>
                
                
               
                          <!-- <img data-toggle="modal"  data-target="#editModal" src="ic_edit.jpeg"> -->
               
            
                        </tr>
            
                        <% } %>
 

          
                      </tbody>
        
                      </table style="margin-top: 20px;">
        
      
                      <div class="container">
       
                        <div class="form-group" style="float: right; width: 10%;">
         
                          <!--		Show Numbers Of Rows 		-->
         
                        <select class="form-control" name="state" id="maxRows">
          
                          <option value="5000">Show ALL Rows</option>
           
                          <option value="5">5</option>
           
                          <option value="10">10</option>
           
                          <option value="15">15</option>
           
                          <option value="20">20</option>
           
                          <option value="50">50</option>
           
                          <option value="70">70</option>
           
                          <option value="100">100</option>
          </select>

        </div>

        <div class='pagination-container'>
          <nav>
            <ul class="pagination">

              <li data-page="prev">
                <span>
                  < <span class="sr-only">(current)
                </span></span>
              </li>
              <!--	Here the JS Function Will Add the Rows -->
              <li data-page="next" id="prev">
                <span> > <span class="sr-only">(current)</span></span>
              </li>
            </ul>
          </nav>
        </div>

      </div>


         </div>

              <div>

                         

                <!-- Modal -->
                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalCenterTitle">Add Room</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        


    
                        <form action="periodAdd" method="post">
                          <div style="margin-top: 50px; padding: 5%; background-color: #f3f3f3;">
                            <div class="form-group">
                              <input type="number" class="form-control" name="id" placeholder="ID *"  
                                required="required" />
                            </div>
                            <div class="form-group">
                              <input type="time" class="form-control" name="startTime" placeholder="Start Time  *"  
                                required="required" />
                                
                            </div>
                            <div class="form-group">
                              <input type="time" class="form-control" name="endTime" placeholder="End Time *"  
                                required="required" />
                            </div>
              
                          </div>
              
              
                          <div class="custom-control custom-checkbox my-sm-2">
                            <input type="checkbox" class="custom-control-input style id=" customControlInline
                              style="box-sizing: border-box;">
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Add Period</button>
                          </div>
              
                        </form>
              
                            </div>
                            
                          </div>
                        </div>
                      </div>

                    
            </div>





                  


              
              </div>
              
     </div>
   </div>


   <!-- Button to Open the Modal -->

     



  
  
 


   <!-- Optional JavaScript -->

   <!-- jQuery first, then Popper.js, then Bootstrap JS -->

   <%- include('partials/footer.ejs') %>
      

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    </body>
</html>